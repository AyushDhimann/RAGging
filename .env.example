# Vector Database
VECTOR_DB=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=multilingual_docs

# Embeddings (Gemini)
EMBEDDING_MODEL=models/text-embedding-004
GEMINI_API_KEYS=your-key-1,your-key-2,your-key-3

# LLMs
LLM_PRIMARY=ollama:gemma3:4b
LLM_FALLBACK=gemini-flash-latest
OLLAMA_HOST=http://localhost:11434

# Retrieval
ENABLE_BM25=true
FUSION_METHOD=weighted
DENSE_WEIGHT=0.6
KEYWORD_WEIGHT=0.4

# Reranking
ENABLE_RERANK=true
RERANK_BACKEND=gemini
RERANK_TOP_K=30

# Query Decomposition
ENABLE_DECOMPOSITION=true

# Metadata Filters
ENABLE_METADATA_FILTER=true

# Evaluation
ENABLE_EVAL=true
EVAL_MODEL=gemini-flash-latest

# OCR
OCR_ENGINE=tesseract
OCR_LANGS=eng,chi_sim,hin,ben,urd
TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
ENABLE_LLM_CLEANUP=false

# System
ENABLE_GPU=false
USE_DOCKER_GPU=false
GPU_PLATFORM=windows

# Rate Limiting
KEY_ROTATION_STRATEGY=round_robin_backoff
RATE_LIMIT_RPM=90

# Chunking
CHUNK_SIZE=500
CHUNK_OVERLAP=65

# Paths
DATA_DIR=data
REPORTS_DIR=reports
